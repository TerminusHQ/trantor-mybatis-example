<View>
    <Table model="trantor_demo_mybatis_StaffModel">
        <Search>
            <Fields>
                <Field name="name"/>
            </Fields>
        </Search>
        <Actions>
            <Action type="Create" label="新增"
                    action="trantor_demo_mybatis_StaffModel_createMyBatisView"/>
        </Actions>
        <Fields>
            <Field name="name"/>
            <Field name="equipment"/>
        </Fields>
        <RecordActions label="操作">
            <Action label="详情" action="trantor_demo_mybatis_StaffModel_detailMyBatisView"/>
            <Action label="编辑" action="trantor_demo_mybatis_StaffModel_editMyBatisView"/>
            <Action label="删除" after="Refresh" confirm="确定要删除?"
                    action="trantor_demo_mybatis_StaffModel_StaffAction::deleteByMyBatis"/>
        </RecordActions>
    </Table>
</View>